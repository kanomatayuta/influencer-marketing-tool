{
  "name": "@influencer-tool/api",
  "version": "1.0.0",
  "description": "Express.js backend for influencer marketing tool",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "prisma generate && tsc",
    "clean": "rm -rf dist",
    "lint": "echo 'Linting skipped for API (uses type checking instead)'",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests configured for API'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "prisma": "prisma",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@influencer-tool/shared-types": "workspace:*",
    "@influencer-tool/shared-utils": "workspace:*",
    "@aws-sdk/client-s3": "^3.940.0",
    "@prisma/client": "^6.12.0",
    "@sentry/node": "^9.42.0",
    "@sentry/tracing": "^7.120.3",
    "@types/bcrypt": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^2.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.2",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.11.3",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.2",
    "stripe": "^19.1.0",
    "twitter-api-v2": "^1.27.0",
    "xss-filters": "^1.2.7",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "prisma": "^6.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
