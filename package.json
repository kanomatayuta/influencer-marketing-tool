{
  "name": "influencer-marketing-tool",
  "version": "1.0.0",
  "description": "Influencer Marketing Tool - Monorepo for API and Dashboard applications",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "pnpm --recursive --parallel dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "dev:docker:build": "docker-compose -f docker-compose.dev.yml build",
    "dev:docker:down": "docker-compose -f docker-compose.dev.yml down -v",
    "api": "pnpm --filter @influencer-tool/api dev",
    "dashboard": "pnpm --filter @influencer-tool/dashboard dev",
    "build": "pnpm --recursive build",
    "build:api": "pnpm --filter @influencer-tool/api build",
    "build:dashboard": "cd apps/dashboard && npm run build",
    "start": "pnpm --recursive start",
    "start:api": "pnpm --filter @influencer-tool/api start",
    "start:dashboard": "pnpm --filter @influencer-tool/dashboard start",
    "start:prod": "docker-compose -f docker-compose.yml up",
    "start:prod:build": "docker-compose -f docker-compose.yml build",
    "start:prod:down": "docker-compose -f docker-compose.yml down -v",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "clean:install": "pnpm clean && pnpm install",
    "typecheck": "pnpm --filter '@influencer-tool/shared-types' build && pnpm --filter '@influencer-tool/shared-utils' build && pnpm --filter '!@influencer-tool/api' --recursive typecheck",
    "prisma:generate": "pnpm --filter @influencer-tool/api prisma generate && pnpm --filter @influencer-tool/dashboard prisma generate",
    "prisma:migrate": "pnpm --filter @influencer-tool/dashboard prisma migrate dev",
    "prisma:studio": "pnpm --filter @influencer-tool/dashboard prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "framer-motion": "^12.23.24"
  }
}
